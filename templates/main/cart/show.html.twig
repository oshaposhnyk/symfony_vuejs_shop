{% extends 'main/base.html.twig' %}

{% block title %}Your cart - RankedChoice{% endblock %}
{% block page_keywords %}Jeans, Ranked Choice Homepage, Jackets{% endblock %}
{% block page_description %}User cart on RankedChoice shop!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('appMainCartShow') }}
{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="page-details mt-4">
                        <h1 class="h4 font-weight-normal title-gradient-1">Your cart</h1>
                        <div id="app"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        if (typeof window.staticStore === 'undefined') {
            window.staticStore = {};
        }
        window.staticStore.urlCart = '{{ path('_api_/carts{._format}_get_collection') }}';
        window.staticStore.urlViewProduct = '{{ path('app_product_show_blank') }}';
        window.staticStore.urlCartProduct = '{{ path('_api_/cart_products{._format}_get_collection') }}';
        window.staticStore.urlAssetImageProducts = '{{ asset('uploads/images/products')}}';
    </script>
    {{ encore_entry_script_tags('appMainCartShow') }}
{% endblock %}

