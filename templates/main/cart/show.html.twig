{% extends 'main/base.html.twig' %}

{% block title %}Your cart - RankedChoice{% endblock %}
{% block page_keywords %}Jeans, Ranked Choice Homepage, Jackets{% endblock %}
{% block page_description %}User cart on RankedChoice shop!{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="page-details mt-4">
                        <h1 class="h4 font-weight-normal title-gradient-1">Your cart</h1>
                        <div class="row">
                            <div class="col-lg-12 order-block">
                                <div class="order-content">
                                    {% if cart %}
                                        {% set cartPriceTotal = 0 %}
                                        <table class="table table-cart table-mobile main-cart-show">
                                            <thead>
                                                <tr>
                                                    <th>Product</th>
                                                    <th>Price</th>
                                                    <th>QTY</th>
                                                    <th>Total</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for cartProduct in cart.cartProducts %}
                                                    <tr>
                                                        <td class="product-col">
                                                            <div class="text-center">
                                                                {% set product = cartProduct.product %}
                                                                <figure>
                                                                    {% set images = product.getProductImages().getValues() %}
                                                                    {% if images|length %}
                                                                        {% set cover = images[0] %}
                                                                        <a href="{{ path('app_product_show', {'uuid': product.uuid}) }}" target="_blank">
                                                                            <img
                                                                                    src="{{ asset('uploads/images/products/' ~ product.id ~ '/' ~ cover.getFilenameSmall) }}"
                                                                                    alt="{{ product.title }}"
                                                                                    width="50"
                                                                            >
                                                                        </a>
                                                                    {% endif %}
                                                                </figure>
                                                                <div class="product-title">
                                                                    <a href="{{ path('app_product_show', {'uuid': product.uuid}) }}" target="_blank">
                                                                        {{ product.title }}
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="price-col">
                                                            {{ product.price|format_currency('EUR') }}
                                                        </td>
                                                        <td class="quantity-col">
                                                            {{ cartProduct.quantity }}
                                                        </td>
                                                        <td class="total-col">
                                                            {% set total = cartProduct.quantity * product.price %}
                                                            {% set cartPriceTotal = cartPriceTotal + total %}
                                                            {{ total|format_currency('EUR') }}
                                                        </td>
                                                        <td></td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>

                                        <div class="mb-2 mt-2">
                                            Total: <strong>{{ cartPriceTotal|format_currency('EUR') }}</strong>
                                        </div>

                                        <a href="" class="btn btn-success mb-3 text-white">
                                            MAKE ORDER
                                        </a>
                                    {% else %}
                                        <div class="alert alert-info">Your cart is empty</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

