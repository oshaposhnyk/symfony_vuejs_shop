{% extends 'main/base.html.twig' %}

{% block title %}{{ category.title }} - RankedChoice{% endblock %}
{% block page_keywords %}Jeans, Ranked Choice Homepage, Jackets{% endblock %}
{% block page_description %}Category page of RankedChoice shop!{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="container mt-3 mb-2">
            <div class="row">
                <div class="col-lg-12 mb-2">
                    <div class="page-title2">
                        <a class="page-title title-gradient-1">{{ category.title }}</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product-list mb-3">
                        <div class="row justify-content-center">
                            {% for product in products %}
                                <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                                    {% set images = product.getProductImages().getValues() %}
                                    {% if images|length %}
                                        {% set cover = images[0] %}
                                        <div class="product-item">
                                        <figure class="product-media">
                                            <span class="product-sale-status sale-status-new">New</span>
                                            <a href="{{ path('app_product_show', {'uuid': product.uuid}) }}">
                                                <img src="{{ asset('uploads/images/products/' ~ product.id ~ '/' ~ cover.getFilenameMiddle) }}" alt="{{ product.title }}" class="product-image">
                                            </a>
                                            <div class="product-actions">
                                                <a onclick="addProductToCart('{{ product.uuid }}')" class="btn-add-to-cart" style="cursor: pointer;">
                                                    add to cart
                                                </a>
                                            </div>
                                        </figure>
                                        <div class="product-card-content">
                                            <h3 class="product-title">
                                                <a href="{{ path('app_product_show', {'uuid': product.uuid}) }}">{{ product.title }}</a>
                                            </h3>
                                            <div class="product-price justify-content-center">
                                                {{ product.price|format_currency('EUR') }}
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        function addProductToCart(uuid) {
            window.vueMenuCartInstance.addCartProduct({uuid});
        }
    </script>
{% endblock %}
