{% extends 'admin/layout/layout_main.html.twig' %}

{% block title_detailed %}Edit Order{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
{#        <div class="card-header py-3">#}
{#            {% include 'admin/embed/card/_breadcrumbs.html.twig' with {#}
{#                'sectionTitle': 'Category',#}
{#                'actionUrl': path('admin_category_list'),#}
{#                'addActionUrl': path('admin_category_add'),#}
{#                'entity': category#}
{#            } %}#}
{#        </div>#}
        <div class="card-body">
            {{ form_start(form) }}

            <div class="form-group row">
                <div class="col-md-1">
                    Id:
                </div>
                <div class="col-md-11">
                    {{ order.id }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    Created at:
                </div>
                <div class="col-md-11">
                    {{ order.createdAt|date('H:i:s d/m/y') }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    Updated at:
                </div>
                <div class="col-md-11">
                    {{ order.updatedAt|date('H:i:s d/m/y') }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.owner) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.owner) }}
                    <div class="form-error">
                        {{ form_errors(form.owner) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.status) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.status) }}
                    <div class="form-error">
                        {{ form_errors(form.status) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1"></div>
                <div class="col-md-11 pl-5">
                    {{ form_widget(form.isDeleted) }}
                    {{ form_label(form.isDeleted) }}
                    <div class="form-error">
                        {{ form_errors(form.isDeleted) }}
                    </div>
                </div>
            </div>

            <hr/>
            {% include 'admin/embed/card/_form_buttons.html.twig' with {
                'entity': order,
                'catalogRoute': path('admin_order_list')
            }  %}
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>

    {% if order and order.id %}
        {% include 'admin/embed/utils/_modal.html.twig' with {
            'id': 'approveDeleteModal',
            'title': 'Are you sure?',
            'text': 'Order will be deleted.',
            'actionUrl': path('admin_order_delete', {'id': order.id}),
            'btnText': 'Delete row'
        } %}
    {% endif %}
{% endblock %}
