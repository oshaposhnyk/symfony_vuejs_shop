<div class="d-flex justify-content-between align-items-center">
    <h6 class="m-0 font-weight-bold text-primary">{{ sectionTitle }}</h6>
    <div>
        {% if 'deleted' not in app.request.get('_route') %}

            <a href="{{ addActionUrl }}" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> Add new
            </a>
            <a href="{{ listDeleted }}" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
                <i class="fas fa-eye-slash fa-sm text-white-50"></i> List of deleted items
            </a>
        {% else %}
            <a href="{{ list }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-list fa-sm text-white-50"></i> List
            </a>
        {% endif %}
    </div>
</div>